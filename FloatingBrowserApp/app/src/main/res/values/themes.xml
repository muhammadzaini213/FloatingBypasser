<resources>
    <!-- Base application theme. -->
    <style name="Theme.AIClicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>



        <!-- Customize your theme here. -->
    </style>


    <style name="background" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_round</item>
        <item name="android:backgroundTint">@color/background_color_day</item>
    </style>


    <style name="text_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/item_color_day</item>
    </style>

    <style name="tab_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="tabIconTint">@color/item_color_day</item>
        <item name="tabIndicatorColor">@color/item_color_day</item>
    </style>

    <style name="item_color" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/item_color_day</item>
        <item name="backgroundTint">@color/item_color_day</item>
    </style>

    <style name="container_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_round</item>
        <item name="android:backgroundTint">@color/exit_background_day</item>
        <item name="android:textColor">@color/item_color_day</item>
    </style>

    <style name="navbar_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_round_bottom_navbar</item>
        <item name="android:backgroundTint">@color/exit_background_day</item>
    </style>

    <style name="icon_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:backgroundTint">@color/item_color_day</item>
        <item name="android:tint">@color/item_color_day</item>
    </style>

    <style name="keyboard_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:background">@color/background_color_day</item>
        <item name="android:textColor">@color/item_color_day</item>
    </style>

    <style name="floating_background" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_round</item>
        <item name="android:backgroundTint">@color/background_color_day</item>
    </style>

    <style name="exit_background_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/exit_background_day</item>
    </style>

    <style name="button_style" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="backgroundTint">@color/item_color_day</item>
        <item name="android:textColor">@color/background_color_day</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
    </style>
</resources>

